{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src/scripts",
    "outDir": "."
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/scripts/**/*.ts",
  ]
}